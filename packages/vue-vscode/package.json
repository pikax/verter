{
  "name": "@verter/vue-vscode",
  "version": "1.0.0",
  "description": "Verter VSCode Extension",
  "main": "dist/extension.js",
  "type": "commonjs",
  "scripts": {
    "build": "vite build",
    "watch": "pnpm build --watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Carlos Rodrigues <pikax>",
  "license": "MIT",
  "dependencies": {
    "@types/lodash": "^4.17.0",
    "@types/vscode": "^1.87.0",
    "@verter/language-server": "workspace:^",
    "@verter/language-shared": "workspace:^",
    "lodash": "^4.17.21",
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "vite": "^5.0.11"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onLanguage:vue",
    "onCommand:verter.restartLanguageServer",
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Verter",
      "properties": {
        "verter.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/Disable Verter"
        }
      }
    },
    "languages": [
      {
        "id": "vue",
        "aliases": [
          "Vue"
        ],
        "extensions": [
          ".vue"
        ],
        "configuration": "./languages/vue-language-configuration.json"
      },
      {
        "id": "vue-html",
        "aliases": [
          "Vue HTML",
          "vhtml",
          "vhtm"
        ],
        "extensions": [
          ".vue-html",
          ".vhtml"
        ],
        "configuration": "./languages/vue-html-language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "verter.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "verter.restartLanguageServer",
        "title": "Verter: Restart Language Server"
      },
      {
        "command": "veter.showCompiledCodeToSide",
        "title": "Verter: Show compiled Code to Side"
      }
    ]
  }
}
