{
  "extends": "../../tsconfig.base.json",
  "include": ["./src"],
  "exclude": [
    "dist",
    "node_modules",
    "src/generator/_tests_",
    "src/**/*/_gen.ts",
    "generated",
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",

    "target": "ES6",
    "module": "nodenext",
    "types": ["vitest/importMeta", "vitest/globals"],
    "preserveConstEnums": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "nodenext"
  }
}
