  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "pnpm --filter @verter/language-shared --filter @verter/language-server --filter @verter/core --filter verter-vscode --filter @verter/typescript-plugin  build",
    "watch": "pnpm --filter @verter/core --filter @verter/language-shared --filter @verter/language-server --filter verter-vscode --filter @verter/typescript-plugin watch",
    "dev-extension": "pnpm --filter @verter/language-server --filter verter-vscode watch",
    "update-all": "pnpm up -r -i -L",
    "build:package": "rollup -c rollup.config.js",
    "package": "cd extensions/vscode && npm install --omit=dev && npx shx mkdir -p node_modules/@verter && npx shx cp -r ../typescript-plugin node_modules/@verter/typescript-plugin && npx shx rm -r node_modules/@oxc-parser && npx vsce package",
    "copy-plugin": "npx shx mkdir -p extensions/vue-vscode/node_modules/@verter && npx shx cp -r extensions/typescript-plugin extensions/vue-vscode/node_modules/@verter/typescript-plugin"
  },
